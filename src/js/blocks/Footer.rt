<rt-import name="default" as="PokemonsFilter" from="../blocks/PokemonsFilter.js" />

<footer class="footer {this.props.showFilter ? '' : 'collapsed'}">
  <div class="container">
    <div
      class="footer__toggle"
      onClick="()=>this.toggle()"
